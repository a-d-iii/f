---
import RatingWidget from './RatingWidget.tsx';
const { faculty } = Astro.props;
---
<article class="card" view-transition-name={`card-${faculty.id}`}> 
  <img src={faculty.photo} alt={`Photo of ${faculty.name}`} loading="lazy" class="w-full h-auto rounded mb-2" />
  <h3 class="text-lg font-semibold">{faculty.name}</h3>
  <p class="text-sm text-gray-600 dark:text-gray-300">{faculty.dept}</p>
  <RatingWidget rating={faculty.avgRating} showValue={true} client:load />
  <p class="text-sm mt-1">{faculty.ratingsCount} rating{faculty.ratingsCount === 1 ? '' : 's'}</p>
  <div class="mt-2 space-y-1 text-sm">
    <div class="flex items-center gap-1">
      <span>Teaching:</span>
      <RatingWidget rating={faculty.teachingAvg} showValue={true} client:load />
      <span class="text-xs">({faculty.teachingCount})</span>
    </div>
    <div class="flex items-center gap-1">
      <span>Attendance:</span>
      <RatingWidget rating={faculty.attendanceAvg} showValue={true} client:load />
      <span class="text-xs">({faculty.attendanceCount})</span>
    </div>
    <div class="flex items-center gap-1">
      <span>Correction:</span>
      <RatingWidget rating={faculty.correctionAvg} showValue={true} client:load />
      <span class="text-xs">({faculty.correctionCount})</span>
    </div>
  </div>
</article>
